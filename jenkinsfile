pipeline {
    agent any 
    stages {
        stage('clone') { 
            steps {
                git 'https://github.com/opstree/spring3hibernate.git'
                
            }
        }
        stage('Compile and Clean') { 
            steps {

                sh "mvn clean compile"
            }
        }
       

        stage('package') { 
            steps {
                sh "mvn package"
            }
        }
        stage('Deploy') { 
            steps {
               sh '''rm -rf dockerimg
                     mkdir dockerimg
                     cd dockerimg
                     cp /var/lib/jenkins/workspace/job1/target/Spring3HibernateApp.war .
                     touch dockerfile
                     cat <<EOT>>dockerfile
                     FROM tomcat
                     ADD Spring3HibernateApp.war /usr/local/tomcat/webapps/
                     CMD ["catalina.sh","run"]
                     EXPOSE 8080 
                     EOT
                     sudo docker build -t webimage:1.0 .
                     sudo docker container run -itd --name webserver -p 8888:8080 webimage:1.0 '''
            }
        }
    }
}
